{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="">Ajout Utilisateur</h1>
        <div class="row">
            <div class="col-md-offset-2 col-md-6">
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="alert alert-success" role="alert">
                       {{ flashMessage }}
                    </div>
                {% endfor %}
            </div>
        </div>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-3 ">
                {{ form_row(form.name) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.lastName) }}
            </div>

        </div>
        <div class="row">
            <div class="col-md-4 ">
                {{ form_row(form.cin) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.matricule) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.nationality) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 ">
                {{ form_row(form.address) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.status) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.grade) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 ">
                {{ form_row(form.workingDuration) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.numberOfChildren) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.mission) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.revenuImposable) }}
            </div> <div class="col-md-4">
                {{ form_row(form.privilege) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.services) }}
            </div>
        </div>
        <div class="form-group"><button type="submit"  class="btn btn-primary btn">Enregistrer</button></div>
        {{ form_end(form) }}
    </div>
{% endblock %}

